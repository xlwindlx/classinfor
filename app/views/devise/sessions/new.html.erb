

<div class="container-a">



<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-inputs">

    <%= f.input :email, required: false, autofocus: true %> <br>
    <%= f.input :password, required: false %> <br>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t(".sign_in") %>
  </div>
<% end %>
<%= form_for User.new, as: resource_name, url: session_path(resource_name) do |f| %>
  <%= f.text_field :email, autofocus: true, placeholder: '아이디' %>
  <%= f.text_field :password, placeholder: '비밀번호' %>
      <%= f.submit '로그인' %>
<% end %>

<%= render "devise/shared/links" %>

</div>