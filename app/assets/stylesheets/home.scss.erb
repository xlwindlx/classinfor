div.tri-select{
  display: flex;
  div:nth-child(n) {
    width: 33%;
    display: flex;
    justify-content: center;
  }
}
a.a-button {
  &:hover {
    text-decoration: none;
  }
}


div.explain {
  display: flex;
  justify-content: flex-start;
  p {
    margin: 1em 0;
  }
}
div.duel-select {
  display: flex;
  justify-content: space-between;
  div:nth-child(n){
    width: 50%;

    display: flex;
    justify-content: center;
  }
}

//find_by_buildings
div.buildings {
  padding: 2em 2em;
  height: 230px;

  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: space-around;

  button {
    margin: 3px 3px;
  }
}
//children
a.floors {
  button {
    width: 6em;
  }
}


.index_bg {
  width:100%;
  background-image: url(<%= asset_path 'image.png' %>);
}

.container-2{
  width:75vw;
  height:100vh;
  margin:0 auto;
}


.main-copy {
  font-size: 3.6vw;
  font-weight: 100;
  text-align: left;
  line-height: 1.3;
}

.main-visual-wrapper{
  display:flex;
  width:75vw;
  flex-direction:column;
  align-items:flex-start;
}

.search{
  font-size:1.1em;
  padding-top:9vh;
  //width:62vw;
  display:flex;
  justify-content:space-between;
}

.search p{
  font-weight:bold;
  font-size:0.8em;
  padding-right:2vw;
  //margin-right: 1vw;
}

#search_btn {
  font-size:0.9em;
  display:flex;
  justify-content:center;
  align-items:center;
  border: 1px solid #4596f3;
  border-radius: 5px;
  background-color: #4596f3;
  color:white;
  font-weight:bold;
  width: 10vw;
  height: 5vh;
  margin-left:1vw;
}

.floor{
  padding-left:5vw;
  padding-right:8vw;

}

.detail_search {
  font-weight: bold;
  color: #4596f3;
  font-size:1.1em;
  padding-top:6vh;
}

